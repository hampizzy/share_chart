<section class="record_form round">
  <h3>Create new index</h3>
  <%= form_for(@new_index) do |f| %>
    <ul class="form_list">
      <li><%= f.label :name %><br />
          <%= f.text_field :name %></li>
      <li><%= f.label :abbreviation %><br />
          <%= f.text_field :abbreviation %></li>
    </ul>
    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</section>
<section>
  <table>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th></th>
    </tr>
    <% @indices.each do |index| %>
      <tr>
        <td><%= link_to index.name, index %></td>
        <td><%= index.abbreviation %></td>
        <td><%= link_to "delete", index, :method => :delete, :confirm => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>
</section>
