<!DOCTYPE html>
<html>
  <head>
    <title>ShareChart | <%= @title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <header class="container round">
      <div class="title">
        <h1><%= @title %></h1>
      </div>
      <nav>
        <ul>
          <li><%= link_to "Home", root_path, :class => "button round" %></li>
          <li><%= link_to "Chart", chart_path, :class => "button round" %></li>
          <li><%= link_to "Companies", companies_path, :class => "button round" %></li>
        </ul>
      </nav>
    </header>
    <section class="container round">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
